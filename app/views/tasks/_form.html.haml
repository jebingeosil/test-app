= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :start_date
    %br/
    = f.date_select :start_date
  .field
    = f.label :end_date
    %br/
    = f.date_select :end_date
  .field
    = f.label :status
    %br/
    = f.text_field :status
  .field
    = f.label :planned_hours
    %br/
    = f.number_field :planned_hours
  .actions
    = f.submit
