.container
  %p#notice= notice
  %h1 Listing Users
  %table.table-hover
    %thead
      %tr
        %th Name
        %th Email
        %th Password
        %th Role
        %th{:colspan => "3"}
    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.email
          %td= user.password
          %td= user.role
          %td= link_to 'Show', user, class: 'btn btn-success'
          %td= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning'
          %td= link_to 'Destroy', user, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  = link_to 'New User', new_user_path, class: 'btn btn-success'
